@model Musica_MVC.ViewModel.AlbumViewModel;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Agregar Album</h2>
        <input asp-for="AlbumVM.IdAlbum" type="hidden" />
        <form class="form-control" asp-controller="Album" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="AlbumVM.Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Artista</label>
                <select class="form-control" asp-for="AlbumVM.IdArtista" asp-items="Model.Artistas">
                    <option value="">-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Agregar</button>
                <a class="btn btn-warning" asp-controller="Album" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>