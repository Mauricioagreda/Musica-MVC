@model Musica_MVC.ViewModel.CancionViewModel;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Cancion</h2>
        <form class="form-control" asp-controller="Cancion" asp-action="Editar" method="post">
            <input asp-for="CancionVM.IdCancion" type="hidden"/>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="CancionVM.Nombre" type="text"/>
            </div>
            <div class="mb-3">
                <label>Duracion</label>
                <input class="form-control" asp-for="CancionVM.Duracion" type="number"/>
            </div>
            <div class="mb-3">
                <label>Album</label>
                <select class="form-control" asp-for="CancionVM.IdAlbum" asp-items="Model.Albumes">
                    <option value="">-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-warning" asp-controller="Cancion" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>