@model Musica_MVC.Models.Artista;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Agregar Artista</h2>
        <form class="form-control" asp-controller="Artista" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre Artista</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input class="form-control" asp-for="NombreCompleto" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Agregar</button>
                <a asp-controller="Artista" asp-action="Lista" class="btn btn-warning">Volver</a> 
            </div>
        </form>
    </div>
</div>
