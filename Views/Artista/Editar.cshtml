@model Musica_MVC.Models.Artista;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Artista</h2>
        <form asp-controller="Artista" asp-action="Editar" method="post">
            <input asp-for="IdArtista" type="hidden" />
            <div class="mb-3">
                <label>Nombre Artista</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input class="form-control" asp-for="NombreCompleto" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Gaurdar</button>
                <a class="btn btn-warning" asp-controller="Artista" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>